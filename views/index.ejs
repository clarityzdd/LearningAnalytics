<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='style.css'/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="script.js" type="text/javascript"></script>
  </head>
  <body>

  <form class="form-horizontal dataentry" id="form" action="/" method="post">
    <fieldset>

      <legend>Learning Analytics</legend>

      <!-- Select Basic -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="selectbasic">Entidad</label>
        <div class="col-md-4">
          <select id="selectbasic" name="selectbasic" class="form-control" onchange="changeSelect(this.value)">
            <option value="none" selected disabled>Seleccione una opci√≥n</option>
            <option value="student">Alumnos</option>
            <option value="course">Curso</option>
            <option value="assessment">Calificaciones</option>
          </select>
        </div>
      </div>

      <!-- Multiple Radios -->
      <div class="form-group" id="assessment_type_div">
        <label class="col-md-4 control-label" for="assessment_type">Tipo de calificaciones</label>
        <div class="col-md-4">
          <div class="radio">
            <label for="assessment_type-0">
              <input type="radio" name="assessment_type" id="assessment_type-0" value="tma" checked="checked">
              Tutor Marked Assessment (TMA)
            </label>
          </div>
          <div class="radio">
            <label for="assessment_type-1">
              <input type="radio" name="assessment_type" id="assessment_type-1" value="cma">
              Computer Marked Assessment (CMA)
            </label>
          </div>
          <div class="radio">
            <label for="assessment_type-2">
              <input type="radio" name="assessment_type" id="assessment_type-2" value="exam">
              Final Examen (Exam)
            </label>
          </div>
        </div>
      </div>

      <!-- Multiple Radios (inline) -->
      <div class="form-group" id="weight_div">
        <label class="col-md-4 control-label" for="weight">Peso de calificacion</label>
        <div class="col-md-4">
          <label class="radio-inline" for="weight-0">
            <input type="radio" name="weight" id="weight-0" value="less" checked="checked">
            &lt;20
          </label>
          <label class="radio-inline" for="weight-1">
            <input type="radio" name="weight" id="weight-1" value="equal">
            20
          </label>
          <label class="radio-inline" for="weight-2">
            <input type="radio" name="weight" id="weight-2" value="greater">
            &gt;20
          </label>
        </div>
      </div>

      <div class="form-group" id="btn_div">
        <div class="col-md-4">
          <button type="submit" id="enviar-btn" name="enviar-btn" class="btn btn-primary" onclick="sendIt()">Enviar</button>
        </div>
      </div>

    </fieldset>
  </form>

  </body>
</html>
